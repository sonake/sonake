<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hc.server.system.mapper.SysAreaMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hc.common.bean.system.SysArea" id="areaMap">
        <result property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="areaName" column="area_name"/>
        <result property="areaCode" column="area_code"/>
        <result property="orderNum" column="order_num"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>


    <select id="findList" parameterType="sysArea" resultType="sysArea">
      SELECT
	     a1.*, a2.area_name AS parentName
      FROM
	     t_area a1
      LEFT JOIN t_area a2 ON a1.parent_id = a2.id
      WHERE 1 = 1
      <if test="area.areaName != null and area.areaName != ''">
        AND a1.area_name like CONCAT('%',#{area.areaName},'%')
      </if>
      <if test="area.id != null and area.id != ''">
        AND a1.id = #{area.id}
      </if>
      <if test="area.parentId != null and area.parentId != ''">
        AND a1.parent_id = #{area.parentId}
      </if>
      <if test="area.delFlag != null and area.delFlag != ''">
        AND a1.del_flag = #{area.delFlag}
      </if>
        ORDER BY a1.order_num
     </select>

</mapper>
